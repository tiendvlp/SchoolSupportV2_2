<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.activity.SearchResultActivity"
>
    <data class = "com.teamttdvlp.goodthanbefore.schoolsupport.databinding.activity.SearchResultActivityBinding">
    </data>
<LinearLayout
        android:id="@+id/activity_search_result"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="#ffffff">

    <TextView
            android:text="Android"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/textView11"
            android:background="#BBBBBB"/>
    <com.google.android.material.tabs.TabLayout
            android:id="@+id/search_result_tablayout_directory"
            app:tabIndicatorColor="@color/transparent"
            android:layout_width="180dp"
            android:layout_height="34dp">

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday"/>

    </com.google.android.material.tabs.TabLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/textView7"
            android:background="#BBBBBB"/>

    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_result_vpg_search"
            android:background="#ffffff"/>
</LinearLayout>
</layout>
