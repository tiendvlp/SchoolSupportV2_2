<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.activity.MainActivity">
    <data class="com.teamttdvlp.goodthanbefore.schoolsupport.databinding.fragment.LoginFragmentBinding">
        <variable name="viewModel" type="com.teamttdvlp.goodthanbefore.schoolsupport.viewmodel.fragment.LoginViewFragmentModel"></variable>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:text="Login"
            android:textStyle="bold"
            android:textColor="@color/black1"
            android:fontFamily="@font/segoeui"
            android:textSize="53sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="102dp"
            app:layout_constraintStart_toStartOf="@+id/edt_email"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="222dp"
            android:background="@drawable/edt_account"
            android:fontFamily="@font/segoeui"
            android:paddingLeft="20dp"
            android:textColor="@color/black3"
            android:textSize="15sp"
            android:layout_height="40dp"
            android:paddingBottom="3dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edt_email"
            android:layout_marginTop="65dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.0"
            android:hint="email"/>
    <EditText
            android:layout_width="222dp"
            android:background="@drawable/edt_account"
            android:fontFamily="@font/segoeui"
            android:paddingLeft="20dp"
            android:paddingBottom="3dp"
            android:textSize="15sp"
            android:textColor="@color/black3"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edt_password"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_email"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:hint="password"/>
    <com.teamttdvlp.goodthanbefore.schoolsupport.customview.ImageButton
            android:layout_width="222dp"
            android:scaleType="center"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/btn_login"
            android:id="@+id/btn_login"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_password"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="175dp"
            android:id="@+id/guideline"/>
    <TextView
            android:text="or login with"
            android:fontFamily="@font/segoeui"
            android:textSize="15sp"
            android:textColor="@color/black1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"/>
    <com.teamttdvlp.goodthanbefore.schoolsupport.customview.ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@null"
            android:src="@drawable/btn_login_google"
            android:scaleType="center"
            android:id="@+id/btn_login_google"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_login_facebook"
            app:layout_constraintTop_toTopOf="@+id/btn_login_facebook"/>
    <com.teamttdvlp.goodthanbefore.schoolsupport.customview.ImageButton
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@null"
            android:src="@drawable/btn_login_twitter"
            android:id="@+id/btn_login_twitter"
            android:layout_marginTop="0dp"
            app:layout_constraintStart_toEndOf="@+id/btn_login_facebook"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@+id/btn_login_facebook"/>
    <com.teamttdvlp.goodthanbefore.schoolsupport.customview.ImageButton
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:background="@null"
            android:src="@drawable/btn_login_facebook"
            android:id="@+id/btn_login_facebook"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline"/>
    <com.teamttdvlp.goodthanbefore.schoolsupport.customview.ImageButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/btn_register"
            android:id="@+id/btn_signup"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_login_facebook"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.472"/>
    <com.teamttdvlp.goodthanbefore.schoolsupport.customview.ImageButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/btn_work_offline"
            android:id="@+id/btn_work_offline"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintTop_toBottomOf="@+id/btn_signup"
            android:layout_marginTop="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
