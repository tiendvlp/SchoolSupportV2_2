<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.fragment.ToolFragment">
    <data class="com.teamttdvlp.goodthanbefore.schoolsupport.databinding.fragment.ToolFragmentBinding">
        <variable name="viewModel" type="com.teamttdvlp.goodthanbefore.schoolsupport.viewmodel.fragment.OfflineToolFragmentViewModel"/>
    </data>
<LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
    <TextView
            android:textSize="20sp"
            android:text="Tools"
            android:textColor="#ffffff"
            android:gravity="center"
            android:fontFamily="@font/segoeui"
            android:background="#6C6C6C"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:textStyle="bold"/>
    <LinearLayout
            android:gravity="center|top|left"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginStart="15dp" android:layout_marginTop="15dp">

        <LinearLayout
                android:id="@+id/btn_bangtuanhoan"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/icon_bangtuanhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Bảng tuần hoàn"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#474747"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_search_chem_eq"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/icon_chem_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Tìm kiếm phương trình hóa học"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#474747"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_draw_graph"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:visibility="gone">

            <ImageView
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/icon_ve_do_thi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Vẽ đồ thị"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#474747"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_khao_sat_do_thi"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/icon_khao_sat_do_thi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Khảo sát đồ thị hàm số đặc biệt"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#474747"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/btn_quick_navigate_to_tools"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:visibility="gone">

            <ImageView
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/icon_quick_navigate_to_tools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="Điều hướng nhanh đến công cụ"
                    android:textSize="17sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#474747"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

    </layout>
