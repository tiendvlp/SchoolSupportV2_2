<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schema.android.com/apk/res-auto"
        tools:context=".view.fragment.FragmentWatchCEInfo">
    <data class="com.teamttdvlp.goodthanbefore.schoolsupport.databinding.fragment.WatchCeInfoFragmentBinding">
        <variable name="chemicalElement" type="com.teamttdvlp.goodthanbefore.schoolsupport.model.chemicalelement.ChemicalElement"/>
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".fragment.WatchChemEleInfoFragment">

            <TextView
                    android:text="Tên chất"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@{chemicalElement.name}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_chem_name"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/line_color"/>

            <TextView
                    android:text="Kí hiệu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@{chemicalElement.symbol}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_chem_symbol"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/line_color"/>

            <TextView
                    android:text="Số hạt electron - proton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@{String.valueOf(chemicalElement.elecCount)}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_chem_electron_proton_count"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/line_color"/>

            <TextView
                    android:text="Số hạt nơ-tron"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_chem_notron_count"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@{String.valueOf(chemicalElement.notron_count)}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/line_color"/>

            <TextView
                    android:text="Khối lượng nguyên tử"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@{chemicalElement.mass}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_chem_mass"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/line_color"/>

            <TextView
                    android:text="Cấu hình electron"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@{chemicalElement.eleFigure}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_chem_ele_config"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/line_color"/>

            <TextView
                    android:text="Số oxy hóa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@{chemicalElement.oxydationNumbers}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_chem_oxydation_numbers"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/line_color"/>

            <TextView
                    android:text="Độ âm điện"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="@{chemicalElement.eleNegative}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_chem_eletronavigative"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/line_color"/>

            <TextView
                    android:text="Nhiệt độ nóng chảy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="97,79 độ C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_chem_melt_temperature"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/line_color"/>

            <TextView
                    android:text="Thông tin khác"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Đang chờ cập nhật"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_other_info"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
        </LinearLayout>

    </ScrollView >

</layout>
