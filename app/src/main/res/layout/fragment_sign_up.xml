<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.activity.LoginActivity">
    <data class ="com.teamttdvlp.goodthanbefore.schoolsupport.databinding.fragment.SignUpFragmentBinding">
        <variable name="viewModel" type="com.teamttdvlp.goodthanbefore.schoolsupport.viewmodel.fragment.SignUpFragmentViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Sign up"
                android:textStyle="bold"
                android:textColor="@color/black1"
                android:fontFamily="@font/segoeui"
                android:textSize="53sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_marginTop="102dp"
                app:layout_constraintStart_toStartOf="@+id/edt_display_name" app:layout_constraintTop_toTopOf="parent"/>
        <EditText
                android:layout_width="222dp"
                android:background="@drawable/edt_account"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="20dp"
                android:textColor="@color/black3"
                android:textSize="15sp"
                android:layout_height="40dp"
                android:paddingBottom="3dp"
                android:inputType="textEmailAddress"
                android:hint="Display Name"
                android:ems="10"
                android:id="@+id/edt_display_name" android:layout_marginTop="65dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.0"/>
        <EditText
                android:layout_width="222dp"
                android:background="@drawable/edt_account"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="20dp"
                android:paddingBottom="3dp"
                android:textSize="15sp"
                android:textColor="@color/black3"
                android:layout_height="40dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:ems="10"
                android:id="@+id/edt_email"
                app:layout_constraintTop_toBottomOf="@+id/txt_err_mess_display_name_invalid"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="23dp"/>
        <EditText
                android:layout_width="222dp"
                android:background="@drawable/edt_account"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="20dp"
                android:paddingBottom="3dp"
                android:textSize="15sp"
                android:textColor="@color/black3"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:ems="10"
                android:id="@+id/edt_password"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.482"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_err_mess_email_invalid"/>
        <EditText
                android:layout_width="222dp"
                android:background="@drawable/edt_account"
                android:fontFamily="@font/segoeui"
                android:paddingLeft="20dp"
                android:paddingBottom="3dp"
                android:textSize="15sp"
                android:textColor="@color/black3"
                android:layout_height="37dp"
                android:inputType="textPassword"
                android:hint="Re-enter password"
                android:ems="10"
                android:id="@+id/edt_repeat_password"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintTop_toBottomOf="@+id/txt_err_mess_password_invalid" android:layout_marginTop="23dp"/>
        <com.teamttdvlp.goodthanbefore.schoolsupport.customview.ImageButton
                android:layout_width="222dp"
                android:scaleType="center"
                android:layout_height="40dp"
                android:background="@null"
                android:src="@drawable/btn_signup_ok"
                android:visibility="gone"
                android:id="@+id/btn_signup_ok" android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_repeat_password"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"/>

        <com.teamttdvlp.goodthanbefore.schoolsupport.customview.ImageButton
                android:layout_width="222dp"
                android:src="@drawable/btn_signup_failed"
                android:background="@null"
                android:scaleType="center"
                android:layout_height="40dp"
                android:id="@+id/btn_sign_up_default"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintHorizontal_bias="0.482"
                android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/edt_repeat_password"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="175dp"
                android:id="@+id/guideline"/>
        <com.teamttdvlp.goodthanbefore.schoolsupport.customview.CheckBox
                app:checked_background="@drawable/rbtn_check_ok"
                android:focusable="false"
                android:enabled="false"
                app:unchecked_background="@drawable/rbtn_checked_failed"
                android:layout_width="12dp"
                android:checked="true"
                android:layout_height="12dp"
                android:id="@+id/rbtn_display_name_valid"
                app:layout_constraintStart_toEndOf="@+id/edt_display_name"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@+id/edt_display_name" android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/edt_display_name"/>
        <com.teamttdvlp.goodthanbefore.schoolsupport.customview.CheckBox
                app:checked_background="@drawable/rbtn_check_ok"
                android:focusable="false"
                app:unchecked_background="@drawable/rbtn_checked_failed"
                android:enabled="false"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:id="@+id/rbtn_email_valid"
                app:layout_constraintStart_toEndOf="@+id/edt_email"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@+id/edt_email"
                android:visibility="gone" app:layout_constraintBottom_toBottomOf="@+id/edt_email"/>
        <com.teamttdvlp.goodthanbefore.schoolsupport.customview.CheckBox
                app:checked_background="@drawable/rbtn_check_ok"
                android:focusable="false"
                app:unchecked_background="@drawable/rbtn_checked_failed"
                android:enabled="false"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:id="@+id/rbtn_password_valid"
                app:layout_constraintStart_toEndOf="@+id/edt_password"
                android:layout_marginStart="12dp"
                android:layout_marginTop="9dp" app:layout_constraintTop_toTopOf="@+id/edt_password"
                android:visibility="gone" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/txt_err_mess_password_invalid"/>
        <com.teamttdvlp.goodthanbefore.schoolsupport.customview.CheckBox
                app:checked_background="@drawable/rbtn_check_ok"
                app:unchecked_background="@drawable/rbtn_checked_failed"
                android:focusable="false"
                android:layout_width="12dp"
                android:enabled="false"
                android:layout_height="12dp"
                android:id="@+id/rbtn_repeat_password_valid"
                app:layout_constraintStart_toEndOf="@+id/edt_repeat_password"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="@+id/edt_repeat_password"
                android:visibility="gone" app:layout_constraintBottom_toBottomOf="@+id/edt_repeat_password"/>
        <TextView
                android:text="Your display name must be at least 8 characters"
                android:fontFamily="@font/marat_sans_regular"
                android:textSize="12sp"
                android:textColor="#DD4B39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_err_mess_display_name_invalid" android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_display_name"
                app:layout_constraintStart_toStartOf="@+id/edt_display_name" android:layout_marginStart="20dp"
                android:visibility="gone"/>
        <TextView
                android:text="Your email is invalid"
                android:fontFamily="@font/marat_sans_regular"
                android:textSize="12sp"
                android:textColor="#DD4B39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_err_mess_email_invalid"
                app:layout_constraintTop_toBottomOf="@+id/edt_email"
                app:layout_constraintStart_toStartOf="@+id/edt_email" android:layout_marginStart="20dp"
                android:layout_marginTop="2dp" android:visibility="gone"/>
        <TextView
                android:text="Your password name must be \nat least 8 characters,\nhave at least 1 upper case character\nand have at least 1 number"
                android:fontFamily="@font/marat_sans_regular"
                android:textSize="12sp"
                android:textColor="#DD4B39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_err_mess_password_invalid"
                app:layout_constraintTop_toBottomOf="@+id/edt_password"
                app:layout_constraintStart_toStartOf="@+id/edt_password" android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
        />
        <TextView
                android:text="Your repeat password does not match"
                android:fontFamily="@font/marat_sans_regular"
                android:textSize="12sp"
                android:textColor="#DD4B39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_err_mess_repeat_password_inValid"
                app:layout_constraintTop_toBottomOf="@+id/edt_repeat_password"
                android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="@+id/edt_repeat_password"
                android:layout_marginTop="2dp" android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
